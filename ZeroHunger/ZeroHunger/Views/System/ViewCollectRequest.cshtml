@model IEnumerable<ZeroHunger.DB.Collect_Request>

@{
    ViewBag.Title = "ViewCollectRequest";
}

<h2>View Collect Requests</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Request_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Food_Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Program_Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Restaurant_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Request_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Food_Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Program_Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Restaurant_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status) ||
            @Html.ActionLink("Update Status", "UpdateStatus", new { id = item.Request_Id }) 

        </td>
        <td>
            @Html.ActionLink("AssignEmployee", "AssignEmployee", new { id=item.Request_Id})
           
        </td>
    </tr>
}

</table>
<div>
    @Html.ActionLink("Back to Dashboard", "NGO_Dashboard")
</div>